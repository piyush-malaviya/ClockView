<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pcm.clockview.MainActivity">

    <com.pcm.clockviewlib.ClockView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        app:clock_face="digital_face"
        app:clock_face_background="@drawable/image"
        app:clock_face_color="@android:color/black"
        app:show_digital_time="visible" />

</RelativeLayout>
